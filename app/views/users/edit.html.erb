<h1>Edit user</h1>

<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages' %>

  <%= render 'fields', :f => f %>

  <div class="actions">
    <%= f.submit "Update" %><br />
  </div>

<% end %>

<br />
<div>
  <%= gravatar_for @user %>
  <a href="http://gravatar.com/emails" target=_blank>Change</a>
</div>

